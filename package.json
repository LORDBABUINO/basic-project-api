{
  "name": "",
  "version": "1.0.0",
  "main": "./build/server.js",
  "license": "MIT",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "dev": "ts-node-dev --respawn --transpile-only --inspect --ignore-watch node_modules ./src/start/server.ts | yarn pino-pretty",
    "migrate": "yarn typeorm migration:run -d src/database/index.ts",
    "commit": "git-cz",
    "typeorm": "ts-node-dev ./node_modules/typeorm/cli.js",
    "lint": "eslint --fix --ext .js,.ts .",
    "test": "jest -c jest.config.unit.ts",
    "integration": "jest -c jest.config.integration.ts -i",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.ts": "yarn lint",
    "!(src/database/**)/*.ts": "cross-env CI=true yarn test --bail --findRelatedTests --passWithNoTests"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "express": "^4.17.1",
    "jsonwebtoken": "^9.0.2",
    "pg": "^8.5.1",
    "pino": "^8.15.6",
    "reflect-metadata": "^0.1.14",
    "typeorm": "^0.3.17",
    "uuidv4": "^6.2.6"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.2",
    "@commitlint/config-conventional": "^17.7.0",
    "@types/bcrypt": "^5.0.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jest": "^29.5.5",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/node": "^20.8.2",
    "@types/pino": "^7.0.5",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "commitizen": "^4.2.2",
    "commitlint": "^17.7.2",
    "cross-env": "^7.0.3",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^8.50.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^27.4.2",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-simple-import-sort": "^10.0.0",
    "husky": "^8.0.0",
    "jest": "^29.7.0",
    "lint-staged": "^14.0.1",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.2.3",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "supertest": "^6.0.1",
    "ts-jest": "^29.1.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
